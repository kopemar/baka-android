<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/magra</item>
    </style>

    <style name="Button">
        <item name="android:fontFamily">@font/magra_bold</item>
        <item name="android:textSize">@dimen/medium_font</item>
        <item name="android:layout_height">52dp</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="backgroundTint">@color/sunny_evenings</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Secondary">
        <item name="backgroundTint">@color/light_blue</item>
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="FormTextField">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingHorizontal">4dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/sunny_evenings</item>
    </style>

    <style name="Text" />

    <style name="Text.Strong">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/magra_bold</item>
    </style>

    <style name="Text.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/magra_bold</item>
    </style>

</resources>