<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorControlActivated">@color/color_primary</item>
        <item name="colorControlNormal">@color/text</item>
        <item name="colorControlHighlight">@color/color_primary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/magra</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_round_top</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:titleTextStyle">@style/TitlePaneStyleCenter</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:buttonBarButtonStyle">@style/ButtonStyle</item>
        <item name="android:windowBackground">@color/bg_surface</item>
    </style>

    <style name="TitlePaneStyleCenter" >
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:fontFamily">@font/magra_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/sunny_evenings</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="Button.Primary.Color">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="Button.Secondary">
        <item name="rippleColor">@color/gray_blue</item>
        <item name="strokeColor">@color/text</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="FormTextField">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingHorizontal">4dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/sunny_evenings</item>
    </style>

    <style name="Text">
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="Text.Strong">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/magra_bold</item>
    </style>

    <style name="Text.Large.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Larger">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="Text.Medium.Img">
        <item name="android:drawablePadding">12dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/magra_regular</item>
        <item name="titleTextAppearance">@style/TitleStyle</item>
        <item name="android:contentInsetStartWithNavigation">0dp</item>
        <item name="android:insetLeft">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay.Large">
        <item name="titleTextAppearance">@style/TitleStyle</item>
        <item name="android:fontFamily">@font/magra_bold</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="TitleStyle.Large">
        <item name="android:fontFamily">@font/magra</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>