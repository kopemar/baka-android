<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/menu_home">


    <fragment
        android:id="@+id/menu_home"
        android:name="cz.cvut.fel.kopecm26.bakaplanner.ui.fragment.main.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/navigate_to_shift_detail"
            app:destination="@id/shift_fragment" />
    </fragment>
    <fragment
        android:id="@+id/menu_schedule"
        android:name="cz.cvut.fel.kopecm26.bakaplanner.ui.fragment.main.ScheduleFragment"
        android:label="ScheduleFragment"
        tools:layout="@layout/fragment_schedule">
        <action
            android:id="@+id/navigate_to_shift_detail"
            app:destination="@id/shift_fragment" />
    </fragment>
    <fragment
        android:id="@+id/menu_profile"
        android:name="cz.cvut.fel.kopecm26.bakaplanner.ui.fragment.main.ProfileFragment"
        android:label="ScheduleFragment"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/navigate_to_contracts"
            app:destination="@id/contracts_fragment" />
        <action
            android:id="@+id/navigate_to_history"
            app:destination="@id/history_fragment" />
        <action
            android:id="@+id/navigate_to_settings"
            app:destination="@id/settings_fragment" />

    </fragment>

    <fragment
        android:id="@+id/menu_shifts"
        android:name="cz.cvut.fel.kopecm26.bakaplanner.ui.fragment.main.UnassignedFragment"
        android:label="UnassignedFragment"
        tools:layout="@layout/fragment_unassigned">

        <action
            android:id="@+id/navigate_to_shift_detail"
            app:destination="@id/shift_fragment" />
    </fragment>

    <activity
        android:id="@+id/url_activity"
        android:name="cz.cvut.fel.kopecm26.bakaplanner.ui.activity.SetupActivity"
        android:label="UrlActivity"
        tools:layout="@layout/activity_url" />

    <fragment
        android:id="@+id/contracts_fragment"
        android:name="cz.cvut.fel.kopecm26.bakaplanner.ui.fragment.profile.ContractsFragment"
        android:label="ContractsFragment"
        app:popUpTo="@id/menu_profile"
        tools:layout="@layout/fragment_contracts" />

    <fragment
        android:id="@+id/shift_fragment"
        android:name="cz.cvut.fel.kopecm26.bakaplanner.ui.fragment.schedule.ShiftFragment"
        android:label="ShiftFragment"
        tools:layout="@layout/fragment_shift">
        <argument
            android:name="shift"
            app:argType="cz.cvut.fel.kopecm26.bakaplanner.networking.model.Shift"
            app:nullable="false" />
        <action
            android:id="@+id/navigate_to_pick_schedule"
            app:destination="@id/pick_schedule_fragment" />
    </fragment>

    <fragment
        android:id="@+id/history_fragment"
        android:name="cz.cvut.fel.kopecm26.bakaplanner.ui.fragment.profile.HistoryFragment"
        android:label="ShiftFragment"
        tools:layout="@layout/fragment_history">
        <action
            android:id="@+id/navigate_to_shift_detail"
            app:destination="@id/shift_fragment" />
    </fragment>
    <fragment
        android:id="@+id/settings_fragment"
        android:name="cz.cvut.fel.kopecm26.bakaplanner.ui.fragment.profile.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/navigate_to_url"
            app:destination="@id/url_activity" />
    </fragment>
    <fragment
        android:id="@+id/pick_schedule_fragment"
        android:name="cz.cvut.fel.kopecm26.bakaplanner.ui.fragment.shift.PickScheduleFragment"
        android:label="PickScheduleFragment"
        tools:layout="@layout/fragment_pick_schedule">
        <argument
            android:name="shift"
            app:argType="cz.cvut.fel.kopecm26.bakaplanner.networking.model.Shift"
            app:nullable="false" />
    </fragment>
    <fragment
        android:id="@+id/menu_planning"
        android:name="cz.cvut.fel.kopecm26.bakaplanner.ui.fragment.main.PlanningFragment"
        android:label="PlanningFragment"
        tools:layout="@layout/fragment_planning" />

</navigation>