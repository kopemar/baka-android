<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="cz.cvut.fel.kopecm26.bakaplanner.ui.fragment.main.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/navigate_to_shift_detail"
            app:destination="@id/shift_fragment" />

        <action
            android:id="@+id/show_employee_dialog"
            app:destination="@id/dialog_employees" />
    </fragment>

    <fragment
        android:id="@+id/shift_fragment"
        android:name="cz.cvut.fel.kopecm26.bakaplanner.ui.fragment.schedule.ShiftFragment"
        android:label="ShiftFragment"
        tools:layout="@layout/fragment_shift">
        <argument
            android:name="shift"
            app:argType="cz.cvut.fel.kopecm26.bakaplanner.networking.model.Shift"
            app:nullable="false" />
    </fragment>

    <dialog
        android:id="@+id/dialog_employees"
        android:name="cz.cvut.fel.kopecm26.bakaplanner.ui.fragment.main.EmployeesDialogFragment"
        android:label="PickScheduleFragment"
        tools:layout="@layout/dialog_employees" >
        <action
            android:id="@+id/navigate_to_employee_detail"
            app:destination="@id/employee_fragment" />
    </dialog>

    <fragment
        android:id="@+id/employee_fragment"
        android:name="cz.cvut.fel.kopecm26.bakaplanner.ui.fragment.employees.EmployeeFragment"
        android:label="EmployeeFragment">
        <argument
            android:name="employee"
            app:argType="cz.cvut.fel.kopecm26.bakaplanner.networking.model.Employee"
            app:nullable="false" />

        <action
            android:id="@+id/navigate_to_specializations"
            app:destination="@id/organization_specializations_fragment" />

        <action
            android:id="@+id/navigate_to_contracts"
            app:destination="@id/contracts_fragment" />
    </fragment>

    <fragment
        android:id="@+id/contracts_fragment"
        android:name="cz.cvut.fel.kopecm26.bakaplanner.ui.fragment.profile.ContractsFragment"
        android:label="ContractsFragment"
        app:popUpTo="@id/profile"
        tools:layout="@layout/fragment_contracts">
        <argument
            android:name="type"
            app:argType="cz.cvut.fel.kopecm26.bakaplanner.ui.util.FetchContractsStrategy" />
    </fragment>

    <fragment
        android:id="@+id/organization_specializations_fragment"
        android:name="cz.cvut.fel.kopecm26.bakaplanner.ui.fragment.organization.OrganizationSpecializationsFragment"
        android:label="OrganizationSpecializationsFragment">

        <argument
            android:name="type"
            app:argType="cz.cvut.fel.kopecm26.bakaplanner.ui.util.FetchSpecializationStrategy" />

        <action
            android:id="@+id/navigate_to_specialization_detail"
            app:destination="@id/specializationFragment" />
    </fragment>

</navigation>