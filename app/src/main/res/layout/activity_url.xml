<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true">

        <include layout="@layout/background"/>

        <ImageView
            android:id="@+id/baka_planner_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:src="@drawable/ic_bakaplanner_logo_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="72dp"
            android:background="@drawable/rectangle_30"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="72dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/baka_planner_logo">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setup_instance" />

            <EditText
                android:id="@+id/et_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_link"
                android:drawablePadding="10dp"
                android:hint="http://example.com"
                android:paddingHorizontal="6dp" />

            <Button
                android:id="@+id/btn_set_up"
                style="@style/Button.Primary"
                android:layout_width="match_parent"
                android:layout_marginBottom="16dp"
                android:text="@string/set_up" />

        </LinearLayout>

        <ImageView
            android:layout_width="109dp"
            android:layout_height="109dp"
            android:background="@drawable/circle"
            android:padding="20dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintBottom_toTopOf="@id/form"
            app:layout_constraintEnd_toEndOf="@id/form"
            app:layout_constraintStart_toStartOf="@+id/form"
            app:layout_constraintTop_toTopOf="@id/form" />

        <Button
            android:id="@+id/btn_help"
            android:layout_margin="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Button.Secondary"
            android:text="@string/help"
            android:layout_width="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>