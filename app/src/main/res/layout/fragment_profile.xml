<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="USER"
            type="cz.cvut.fel.kopecm26.bakaplanner.networking.model.User" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/very_light_gray">

        <View
            android:id="@+id/subtoolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_subtoolbar_height"
            android:background="@color/very_light_blue"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/subsubtoolbar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_blue"
            app:layout_constraintTop_toBottomOf="@id/subtoolbar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/subsubtoolbar">

            <TextView
                android:id="@+id/tv_name"
                style="Text.Strong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/magra_bold"
                android:text="@{@string/full_name(USER.first_name, USER.last_name)}"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="John Doe" />

            <TextView
                android:id="@+id/tv_mail"
                style="Text.Strong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:fromHtml="@{@string/email(USER.username, USER.email)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                tools:text="John Doe" />


            <Button
                android:id="@+id/btn_log_out"
                style="@style/Button.Primary"
                android:layout_width="match_parent"
                android:layout_marginVertical="16dp"
                android:text="@string/log_out"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_mail" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@drawable/circle"
            android:padding="20dp"
            android:src="@drawable/ic_profile"
            app:layout_constraintBottom_toBottomOf="@id/subtoolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtoolbar"
            app:tint="@color/sunny_evenings" />


        <Button
            android:id="@+id/btn_url"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:text="@string/url"
            app:layout_constraintTop_toBottomOf="@id/cl_summary" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>