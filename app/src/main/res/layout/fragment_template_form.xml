<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="cz.cvut.fel.kopecm26.bakaplanner.viewmodel.shared.TemplateFormViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_surface">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_day"
                style="@style/Text.Large"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="@{vm.unit.dateF}"
                app:drawableStartCompat="@drawable/ic_calendar"
                app:drawableTint="@color/text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Monday, January 11" />

            <EditText
                android:id="@+id/et_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/ic_hourglass_start"
                android:drawablePadding="8dp"
                android:drawableTint="@color/text"
                android:focusable="false"
                android:hint="@string/start_time"
                android:inputType="none"
                android:longClickable="false"
                android:paddingHorizontal="8dp"
                android:textColorHint="@color/text_light"
                app:layout_constraintEnd_toStartOf="@id/et_end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_day" />

            <EditText
                android:id="@+id/et_end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:drawableStart="@drawable/ic_hourglass_end"
                android:drawablePadding="8dp"
                android:drawableTint="@color/text"
                android:focusable="false"
                android:hint="@string/end_time"
                android:inputType="none"
                android:longClickable="false"
                android:paddingHorizontal="8dp"
                android:textColorHint="@color/text_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/et_start"
                app:layout_constraintTop_toTopOf="@id/et_start" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/spinner_break"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintEnd_toEndOf="@id/et_start"
                app:layout_constraintStart_toEndOf="@id/et_start"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_start">

                <AutoCompleteTextView
                    android:id="@+id/actv_break_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/break_minutes"
                    android:inputType="none"
                    android:text="@{vm.breakMinutes != null ? @string/_min(vm.breakMinutes) : null}" />

            </com.google.android.material.textfield.TextInputLayout>

