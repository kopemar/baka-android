            <TextView
                android:id="@+id/tv_duration"
                style="@style/Text.Large.Light"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:drawablePadding="6dp"
                android:paddingHorizontal="4dp"
                android:text="@{@string/hours_(vm.duration == null ? 0.0F : vm.duration) }"
                android:textColor="@{vm.durationError ? @color/red: @color/text}"
                app:drawableStartCompat="@drawable/ic_mdi_clock_time_eight"
                app:drawableTint="@color/text"
                app:layout_constraintBottom_toBottomOf="@id/spinner_break"
                app:layout_constraintStart_toStartOf="@id/et_end"
                app:layout_constraintTop_toTopOf="@id/spinner_break"
                tools:text="Hours: 0,00" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/spinner_demand"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/spinner_break">

                <AutoCompleteTextView
                    android:id="@+id/actv_demand_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/priority"
                    android:inputType="none"
                    android:text="@{vm.priority != null ? context.getString(vm.priority.titleRes) : null}" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


