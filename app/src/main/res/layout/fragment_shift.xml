<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="cz.cvut.fel.kopecm26.bakaplanner.viewmodel.ShiftViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_single"
            app:title="@{@string/shift}" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:background="@color/white"
            android:elevation="6dp">

            <TextView
                android:id="@+id/tv_shift_title"
                style="@style/Text.Strong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@{vm.shift.dateF}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_starting_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:text="@{vm.shift.startTimeHours}"
                app:drawableStartCompat="@drawable/ic_hourglass_start"
                app:layout_constraintStart_toStartOf="@id/tv_shift_title"
                app:layout_constraintTop_toBottomOf="@id/tv_shift_title"
                tools:text="10:00 AM" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:drawablePadding="8dp"
                android:text="@{vm.shift.endTimeHours}"
                app:drawableStartCompat="@drawable/ic_hourglass_end"
                app:layout_constraintStart_toEndOf="@id/tv_starting_hours"
                app:layout_constraintTop_toTopOf="@id/tv_starting_hours"
                tools:text="10:00 AM" />

            <TextView
                style="@style/Text.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{vm.shift.relativeTimestamp}"
                app:layout_constraintStart_toStartOf="@id/tv_starting_hours"
                app:layout_constraintTop_toBottomOf="@id/tv_starting_hours"
                tools:text="Starts in 5 hours" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>