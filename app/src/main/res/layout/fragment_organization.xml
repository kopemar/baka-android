<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="USER"
            type="cz.cvut.fel.kopecm26.bakaplanner.networking.model.User" />

        <import type="cz.cvut.fel.kopecm26.bakaplanner.ui.util.NativeOptions"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/main_toolbar"
            layout="@layout/toolbar_single_main"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@{@string/organization}" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:text="@{USER.organizationFirstLetter}"
            android:textSize="36sp"
            tools:text="Q" />

        <TextView
            style="@style/Text.Larger"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{USER.organization_name}"
            tools:text="Qu, Inc."
            />

        <TextView
            style="@style/Text.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/employees" />

        <TextView
            android:background="@drawable/color_2_ripple"
            android:id="@+id/btn_all_employees"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="@string/employees"
            app:drawableStartCompat="@drawable/ic_employee_count" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_blue"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            style="@style/Text.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/specializations" />

        <include android:id="@+id/specializations" layout="@layout/list_native_options" app:option="@{NativeOptions.SPECIALIZATIONS}"  />

    </LinearLayout>
</layout>